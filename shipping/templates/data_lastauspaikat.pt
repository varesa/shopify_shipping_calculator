<metal:main metal:use-macro="load: master.pt">
    <metal:slot metal:fill-slot="content">
        <div class="container">
            <h2>Lastauspaikat</h2>

            <div class="panel">
                <div class="panel-body">
                    <table class="table">
                        <tr>
                            <th>Paikka</th>
                            <th>Osoite</th>
                        </tr>
                        <tr tal:repeat="location locations">
                            <td>${location.name}</td>
                            <td>${location.address}</td>
                        </tr>
                    </table>
                </div>
            </div>

        </div>
    </metal:slot>
</metal:main>