<metal:main metal:use-macro="load: master.pt">
    <metal:slot metal:fill-slot="content">
        <div class="container">
            <h2>Lastauspaikat</h2>

            <div class="panel">
                <div class="panel-body">
                    <h2>Laata uuudet</h2>
                    <p>Lataa uudet lastaustiedot CSV-tiedostona. Muoto: <br>
                    Lastauspaikan nimi | Osoite

                    Eroitinmerkki: ';'</p>

                    <form enctype="multipart/form-data" method="POST">
                        <input type="file" name="file_locations">
                    </form>
                </div>
            </div>

            <div class="panel">
                <div class="panel-body">
                    <table class="table">
                        <tr>
                            <th>Paikka</th>
                            <th>Osoite</th>
                        </tr>
                        <tr tal:repeat="location locations">
                            <td>${location.name}</td>
                            <td>${location.address}</td>
                        </tr>
                    </table>
                </div>
            </div>

        </div>
    </metal:slot>
</metal:main>